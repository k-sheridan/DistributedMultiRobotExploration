classdef World
    % Stores the ground truth of the world and all robot ground truth
    % positions.
    
    properties
        groundTruthMap; % an occupancy grid which is the actual map, origin at center.
        mapResolution; % meters per pixel
    end
    
    methods
        function obj = World(pathToMapImage, resolution)
            img = imread(pathToMapImage);
            % take the first channel and call it the occupancy grid.
            obj.groundTruthMap = (img(:, :, 1)>0)*255;
        end
        
        function 
    end
end

